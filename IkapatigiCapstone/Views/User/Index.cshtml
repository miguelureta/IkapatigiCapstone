@model IEnumerable<IkapatigiCapstone.Models.User>
@{
    ViewData["Title"] = "User Management : Status Editing";
    Layout = "~/Views/Shared/_hAdminLayout.cshtml";
}
<br/>
<div class="titlecontainer">
    <div class="text-center">

        <h1 class="display-4">User Status List</h1>
    </div>
</div>
<br />
    
<div class="bgtable">
    <p>
        <a asp-action="Create"><i class="fa-solid fa-circle-plus">Create Moderator</i></a>
    </p>
    <br/>
    <table id="records" class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Username)   
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateCreated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RoleId)
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoleId.Value)
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.UserId"
                            onclick='return confirm("Are you sure?");'>
                            <span class="btn btn-sm btn-outline-danger">
                                <i class="fa fa-trash" style="color:red"></i>
                            </span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>
    <script> 
        $(document).ready(function () {
            $('#records').DataTable();
        });
    </script>
}