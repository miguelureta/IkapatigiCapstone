@model IEnumerable<IkapatigiCapstone.Models.HowTo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<br />
<div class="titlecontainer">
    <div class="text-center">

        <h1 class="display-4">How-Tos</h1>
    </div>
</div>
<br />

<div class="bgtable">


    <p>
        <a asp-action="Create"><i class="fa-solid fa-circle-plus"> Create New</i></a>
    </p>

    <br />

    @using (Html.BeginForm("GroupDelete", "HowTo", FormMethod.Post))
    {

        <table id="records" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LikeCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DislikeCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsPublic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateUpdated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleBody)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                <input type="checkbox" name="allcheck" id="selectAll" /> Select All
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

       @* @Html.EditorForModel()*@
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LikeCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DislikeCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPublic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateUpdated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleBody)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.StatusId)
            </td>
            <td>
                <input type="checkbox" name="id" id="id" value="@item.HowTosID" />
            </td>
          
            <td>
                <a asp-action="Edit" asp-route-id="@item.HowTosID">
                    <i class="fa fa-pencil" style="color:blue"></i>
                </a>
                <a asp-action="Details" asp-route-id="@item.HowTosID">
                    <i class="fa fa-info-circle" aria-hidden="true" style="color: green"></i>
                        

               </a>

                <a asp-action="Banned" asp-route-id="@item.HowTosID">
                    <i class="fa-solid fa-ban" style="color:red"></i>

                </a>
                    <a asp-action="Article" asp-route-id="@item.HowTosID">Details</a>

                <a asp-action="Delete" asp-route-id="@item.HowTosID"
               onclick='return confirm("Are you sure?");'>
                    <i class="fa fa-trash" style="color:red"></i>
                </a>


                   
            </td>
        </tr>
            
}
    </tbody>
</table>

 <input type="submit" value="Delete" class="btn btn btn-danger" />
}

</div>




