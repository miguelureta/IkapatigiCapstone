@model IkapatigiCapstone.Models.AdminLoginRequest

@{
    ViewData["Title"] = "Admin Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />

<div class="card text-bg-success mb-3 mx-auto" style="max-width: 18rem;">
   <br /> 
    <h1 class="card-title text-center mb-1 fw-bold fs-1">Login</h1>
    <br />
    <div class="card-body">
        <div class="col d-flex justify-content-center">
            <form asp-controller="Account" asp-action="aLogin" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" type="password"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="alert-danger">
                    @if(ViewData["LoginMessage"]!=null)
                    {
                        @ViewData["LoginMessage"]
                    }
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-light" id="loginbtn" />
                </div>
            </form>          
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
