@{
    ViewData["Title"] = "Diagnostic Moderator Add Request";
}
<form id="addDiagForm" asp-controller="DiagnosticMod" asp-action="SendRequest" method="post" runat="server">
    <div asp-validation-summary="All" class="text-danger"></div>
    <label asp-for="ImageName"></label>
    <input asp-for="ImageName" class="form-control"/>
    <span asp-validation-for="ImageName" class="text-danger"></span>
    <br/>
    <!---->
    
    <label asp-for="TagName">Tag</label>
    <input asp-for="TagName" class="form-control"/>
    <span asp-validation-for="TagName" class="text-danger"></span>
    <br/>

    <label asp-for="DiseaseName">Disease Name</label>
    <input asp-for="DiseaseName" class="form-control"/>
    <span asp-validation-for="DiseaseName" class="text-danger"></span>
    <br/>

    <label asp-for="Srp">SRP</label>
    <input asp-for="Srp" class="form-control"/>
    <span asp-validation-for="Srp" class="text-danger"></span>
    <br/>
    <label asp-for="Remarks"></label>
    <input asp-for="Remarks" class="form-control"/>
    <span asp-validation-for="Remarks" class="text-danger"></span>
    <br/>
    <input type="submit" value="Send Request"/>
