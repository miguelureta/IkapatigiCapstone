<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IkapaTigi</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IkapatigiCapstone.styles.css" asp-append-version="true" />
    <link href="~/lib/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
  
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: green;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/BackgroundImages/Logo.png" alt="IkapaTigi Logo" width="46" height="40" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="true" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home        </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Diagnostic" asp-action="Index"> <i class="fa fa-stethoscope"></i> Diagnostic        </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Forum" asp-action="Index"><i class="fa fa-comments"></i> Forum        </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="HowTo" asp-action="Index"><i class="fas fa-leaf"></i> How-To's        </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Cure" asp-action="Index"><i class="fa fa-plus-square"></i> Cures        </a>
                        </li>
                       

                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="PlantDisease" asp-action="Index"><i class="fa-brands fa-pagelines"></i> Plant Diseases        </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Tag" asp-action="Index"><i class="fa fa-tags"></i> Tags</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="bg-container">

        <br />
        <div class="container">
            <main role="main" class="pb-3">


            @*    <!-- Success Dialog Start-->
                <div id="myModalSuccess" class="modal fade text-width:30%;" role="dialog">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h2>Information</h2>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>
                            <div id="MyModalSuccessAlertBody" class="modal-body alert alert-success">
                                this is a modal body
                            </div>
                            <div class="modal-footer">
                                &nbsp;
                                <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div
*@

              

                @RenderBody()
            </main>
        </div>

    </div>
    <br /><br />

    <div class="footer-container">
        <footer class="mt-auto footer text-muted ">

            &copy; 2022 - IkapatigiCapstone - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
             - <a asp-area="" asp-controller="Account" asp-action="aLogin">Admin</a> - <a asp-area="" asp-controller="Account" asp-action="adminAccess">Add AdAccess</a>
        </footer>

    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

