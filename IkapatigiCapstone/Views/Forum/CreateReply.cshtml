            <form asp-action="CreateReply">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                    <label asp-for="Content" class="control-label">Reply</label>
                    <input asp-for="Content" class="form-control" />
