@model IEnumerable<IkapatigiCapstone.Models.Forum>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}



<br />
<div class="titlecontainer">
    <div class="text-center">

        <h1 class="display-4">Ikapatigi Forum</h1>
    </div>
</div>
<br />
<div class="bgtable">
    <p>
        <a asp-action="Create"><i class="fa-solid fa-circle-plus"> Create New Forum Post</i></a>
    </p>

    <br />
    <table id="records" class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Created)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User.Email)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Created)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.Email)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ForumId">
                            <span class="btn btn-sm btn-outline-primary">
                                <i class="fa fa-pencil" style="color:blue"></i>
                            </span>
                            </a> 
                            <a asp-action="Details" asp-route-id="@item.ForumId">
                            <span class="btn btn-sm btn-outline-success">
                                <i class="fa fa-info-circle" aria-hidden="true" style="color: green"></i>
                            </span>
                            </a>
                            <a asp-controller="Forum" asp-action="Delete" asp-route-id="@item.ForumId" value="@item.ForumId" method="post"onclick='return confirm("Are you sure?");'>
                            <span class="btn btn-sm btn-outline-danger">
                                <i class="fa fa-trash" style="color:red"></i>
                             </span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

