@using Microsoft.AspNetCore.Http
@model IkapatigiCapstone.Models.PostViewModel

@{
   
    Layout = "~/Views/Shared/_LayoutMember.cshtml";
}

<div class="titlecontainer">
    <div>

        <h1 class="display-4">@Html.DisplayFor(model=>model._Forum.Title)</h1><br />
        <h3>@Html.DisplayFor(model=>model._Forum.Description)</h3>

    </div>
</div>
<div class="bgtable">
    <p>
        <a asp-action="MemberCreatePost"><i class="fa-solid fa-circle-plus"> Create New Post</i></a> |
        <a asp-action="MemberCreateImage"><i class="fa-solid fa-circle-plus"> Add Image</i></a> |
        <a asp-action="ViewImage"><i class="fa-solid fa-circle-plus"> Member Gallery</i></a>
        <br />
        <a asp-action="MemberIndex" asp-controller="Forum">Back to List</a>
        <br />
    </p>
    <table id="records" class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(Model => Model.Posts)
                </th>
                <th>
                    Created On
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Posts)
            {
                <tr>
                    <td>
                        <a asp-action="MemberViewReplies" asp-controller="Forum" asp-route-id="@item.PostId">
                            <details>
                                <summary>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </summary>
                                <p>
                                    @Html.DisplayFor(modelItem => item.Content)
                                </p>
                            </details>
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Created)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<br />
@section Scripts {
    <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>
    <script>
        $(document).ready(function () {
            $('#records').DataTable();
        });
    </script>

}
